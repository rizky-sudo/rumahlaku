<body>
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
        <div class="container-fluid">
            <h3><i class="fas fa-home mr-2 text-light"></i></h3>
            <a class="navbar-brand text-light font-weight-bold" href="/">rumahlaku</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault"
                aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a href="/signout" class="btn btn-danger my-2 my-sm-0 ml-2 text-light" type="submit">Logout</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container">
        <h1 class="display-5" style="text-align: center; margin-top: 30px;"><i
                class="fas fa-home mr-2 text-dark"></i>rumahlaku</h1>
        <h3 style="margin-top: 30px; font-weight: bold;">My Profile</h3>
        <form for="form-profil" action="/profil" method="POST">
            <div class="form-group row" style="margin-top: 10px;">
                <label for="nama" class="col-sm-2 col-form-label">Nama</label>
                <div class="col-sm-10">
                    <input type="nama" class="form-control" id="nama" name="nama" value="<%= data.nama %>">
                </div>
            </div>
            <div class="form-group row">
                <label for="email" class="col-sm-2 col-form-label">Email</label>
                <div class="col-sm-10">
                    <input type="email" class="form-control" id="email" name="email" value="<%= data.email %>">
                </div>
            </div>
            <div class="form-group row">
                <label for="nohandphone" class="col-sm-2 col-form-label">No Handphone</label>
                <div class="col-sm-10">
                    <input type="nohandphone" class="form-control" id="nohandphone" name="nohandphone"
                        value="<%= data.nohandphone %>">
                </div>
            </div>
            <button class="btn btn-lg btn-success btn-block" type="submit">Update</button>
            <% if (info.length > 0) { %>
            <div class="alert alert-success" role="alert">
                <%= info %>
            </div>
            <% } %>
            <button class="btn btn-lg btn-danger btn-block" type="submit">Delete</button>
            <% if (info.length > 0) { %>
            <div class="alert alert-success" role="alert">
                <%= info %>
            </div>
            <% } %>
        </form>
        <P class="mt-2">Reset your password? <a href="/pass">Click here!</a></P>
    </div>
    <footer class="container">
        <p style="margin-top: 50px; text-align: center;">Â© Batch 23 Rubicamp 2020</p>
    </footer>

</body>

</html>