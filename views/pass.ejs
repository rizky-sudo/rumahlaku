                <div class="col-sm-10">
                    <input type="password" class="form-control" id="oldpassword" name="oldpassword">
                </div>
            </div>
            <div class="form-group row">
                <label for="newpassword" class="col-sm-2 col-form-label">New password</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" id="newpassword" name="newpassword">
                </div>
            </div>
            <div class="form-group row">
                <label for="renewpassword" class="col-sm-2 col-form-label">Retype new password</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" id="renewpassword" name="renewpassword">
                </div>
            </div>
            <button class="btn btn-lg btn-success btn-block" type="submit">Reset</button>
            <% if (info.length > 0) { %>
            <div class="alert alert-success" role="alert">
                <%= info %>
            </div>
            <% } %>
        </form>
